.page {
  width: 100%;
  height: 100%;
  background: #fff;
  font-size: 28rpx;
  color: #666;
  font-family: PingFangSC-Medium;
}

.header {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.header .info-name {
  color: #000;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f3f3f3;
  padding-left: 30rpx;
}

.main-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.main-item-left {
  display: flex;
  align-items: center;
}

.main-item-left image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.main-item-right text {
  position: relative;
  padding-right: 20rpx;
}

.main-item-right text::after {
  position: absolute;
  top: 12rpx;
  right: 0rpx;
  content: '';
  width: 15rpx;
  height: 15rpx;
  border: 1rpx solid #ccc;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
}