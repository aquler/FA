.page {
  padding-bottom: 100rpx;
  background: #f6f6f6;
  font-family: PingFangSC-Medium;
}

.pro-item {
  display: flex;
  align-items: flex-start;
  padding: 40rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
}

.pro-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.item-logo image {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #e9e9e9;
  margin-right: 30rpx;
  border-radius: 4rpx;
}

.item-info-title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-right: 20rpx;
}

.item-type {
  font-size: 24rpx;
  color: #00AE65;
  padding: 3rpx 6rpx;
  background: #b4f7eb;
  border-radius: 3rpx;
}

.item-intro {
  font-size: 24rpx;
  color: #888;
}

.item-tags {
  margin-bottom: 10rpx;
}

.item-tags text {
  background: #f6f6f6;
  font-size: 24rpx;
  color: #888;
  padding: 3rpx 6rpx;
  margin-right: 20rpx;
  border-radius: 3rpx;
}

.item-finance {
  display: flex;
  color: #888;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.item-finance > view {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.item-finance image {
  width: 30rpx;
  height: 30rpx;
}

.item-viewnum {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 24rpx;
}

.item-viewnum image {
  width: 32rpx;
  height: 23rpx;
}

/* 项目 */
.main {
  padding: 40rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.main .banner image {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  margin: 40rpx 0;
}

.title {
  color: #000;
  font-size: 32rpx;
}

.content {
  line-height: 38rpx;
}

/* 团队 */
.team {
  background: #fff;
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.team .title {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.team-member {
  padding: 30rpx;
}

.team-member-title {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #000;
}

.team-member-name {
  margin-right: 20rpx;
}

/* 融资顾问 */
.counselor {
  background: #fff;
}
.counselor .title {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.counselor-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
}

.counselor-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.counselor-info {
  width: 100%;
  font-size: 28rpx;
}

.counselor-info > view {
  padding: 5rpx 0;
}

.counselor-info .counselor-info-name {
  color: #000;
  padding: 10rpx 0;
}

.counselor-info-phone, .counselor-info-wechat {
  color: #888;
}

/* 底部 */
.appointment {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #F6F7F9;
}
.appointment > view {
  display: flex;
  align-items: center;
	box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, .1);
	border-radius: 8rpx;
	border: solid 1rpx #eee;
  padding: 0 20rpx;
}
.appointment > view view {
  text-align: center;
}
.appointment .call {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 20%;
  font-size: 22rpx;
	color: #7f7f7f;
}
.appointment .chat {
  width: 20%;
  height: 96rpx;
  font-size: 22rpx;
	color: #7f7f7f;
}
.appointment .chat-icon {
  height: 96rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
	color: #7f7f7f;
}
.appointment .call image {
  width: 44rpx;
  height: 38rpx;
}
.appointment .chat image {
  width: 50rpx;
  height: 35rpx;
}
.appointment .free_appoint {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  background: linear-gradient(-269deg, #2D8CF9 0%, #4299FD 97%);
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.appointment .price {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(-90deg, #00BD6E 3%, #00AE65 100%);
  color: #fff;
  font-size: 32rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}